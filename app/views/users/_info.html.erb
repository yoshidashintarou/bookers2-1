<h2>User info</h2>
<% if user.profile_image.attached? %>
  <%= image_tag user.profile_image,size:"100x100" %>
<% else %>
  <%= image_tag 'no_image', size: "50x50" %>
<% end %>

<table class="table">
<tbody>
    
<tr>    
 <th>name</th>
 <th><%= user.name %></th>
</tr>
 
<tr>
 <th>introduction</th>
 <th><%= user.introduction %></th>
</tr>

</tbody>
</table>

<div class="row">
<%= link_to edit_user_path(user.id), class:"btn btn-outline-secondary btn-block" do %><i class="fas fa-user-cog"></i><% end %></div>  
 







<h2 class= "mt-3">New book</h2>
<%= form_with model: book do |f| %>

<div class= "form-group">
 <label>Title</label>
<br>
 <input class="form-control book_title" type="text" name="book[title]" id="book_title">
</div>
<div class= "form-group">
 <label>Opinion</label>
<br>

<textarea class="form-control book_body" name="book[body]" id="book_body"></textarea>
</div>


 <div class="form-group">
  <%= f.submit class:"btn btn-success" %>
 </div>
<% end %>

 
</div>
 
  
   
 